extends layout

block content
  h1= title
    form(method='POST')
      div.form-group
        label(for='user_name') User Name:
        input#user_name.form-control(type='text', placeholder='Username' name='user_name' required value=(undefined===user ? '' : user.name) )
        label(for='email') email:
        input#email.form-control(type='text', placeholder='email' name='email' required value=(undefined===user ? '' : user.email))
        div.form-group
        label(for='password') password:
        input#password.form-control(type='password', placeholder='password' name='password' value="")

      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

  if message
    ul
      li!= message